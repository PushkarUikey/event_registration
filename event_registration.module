<?php

/**
 * @file
 * Implements hook_mail.
 */

/**
 * Implements hook_mail().
 */
function event_registration_mail($key, &$message, $params) {
  $site_name = \Drupal::config('system.site')->get('name');

  switch ($key) {
    case 'registration_confirm':
      $message['subject'] = t('Registration Confirmed: @event', ['@event' => $params['event_name']]);
      $message['body'][] = t('Dear @name,', ['@name' => $params['name']]);
      $message['body'][] = t('You have successfully registered for the event "@event" in the category "@cat".', [
        '@event' => $params['event_name'],
        '@cat' => $params['category'],
      ]);
      $message['body'][] = t('Event Date: @date', ['@date' => $params['date']]);
      $message['body'][] = t('Thank you, Team @site', ['@site' => $site_name]);
      break;

    case 'admin_notification':
      $message['subject'] = t('New Registration: @event', ['@event' => $params['event_name']]);
      $message['body'][] = t('A new user has registered.');
      $message['body'][] = t('Name: @name', ['@name' => $params['name']]);
      $message['body'][] = t('Email: @email', ['@email' => $params['email']]);
      $message['body'][] = t('Event: @event (@date)', ['@event' => $params['event_name'], '@date' => $params['date']]);
      break;
  }
}